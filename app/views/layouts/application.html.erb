<!DOCTYPE html>
<html>
<head>
  <title>Blackvault</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class='body-wrapper'>
    <%= render 'layouts/header' %>

    <div class="container">
      <div id='notice'>
        <%= render 'layouts/flash', flash: flash %>
      </div>
      <%= yield %>
    </div>
  </div>

  <%= render 'layouts/footer' %>

</body>
</html>
